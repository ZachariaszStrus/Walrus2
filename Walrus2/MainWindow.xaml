<Window x:Class="Walrus2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walrus2"
        mc:Ignorable="d"
        Title="MainWindow" Height="601" Width="1087" ResizeMode="NoResize" MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseWheel="Window_Wheel" Background="Black">
    <Grid Background="Black" Margin="0,0,-6,-4" >
        <TabControl x:Name="tabControl" Margin="226,10,10,10" Background="#FF131313">
            <TabItem Header="Start Page">
                <TextBlock Text="Welcome to Walrus 2 !" Foreground="White" FontSize="36" Padding="20,20,20,0"/>
            </TabItem>
        </TabControl>
        <TextBox x:Name="textBox" 
                 HorizontalAlignment="Left" 
                 Height="410" 
                 Margin="10,10,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="211" Background="#FF131313" Foreground="White"/>
        <Button x:Name="button" Content="New random graph" HorizontalAlignment="Left" Margin="10,450,0,0" VerticalAlignment="Top" Width="211" Height="50" Background="#FF131313" Foreground="White" Click="button_Click" />
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="20" Margin="10,425,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Text="100" MouseMove="Window_MouseMove" MouseDown="Window_MouseDown"/>

    </Grid>
</Window>
